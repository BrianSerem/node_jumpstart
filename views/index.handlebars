<h2 class="text-center mb-8">
    {{ title }} {{name }}
</h2>
<h4>Cars</h4>

<form action="/api/cars" method="POST" class="mb-4">

  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control">
  </div>

  <div class="form-group">
    <label for="name">Brand</label>
    <input type="text" name="brand" class="form-control">
  </div>

  <div class="form-group">
    <label for="name">Engine</label>
    <input type="text" name="engine" class="form-control">
  </div>

  <input type="submit" value ="Add car" class="btn btn-primary btn-block">
</form>

<ul class="list-group">
    {{#each cars}}
      
       <li class="list-group-item">
           {{this.name}}:{{this.brand}}:{{this.fuel}}
       </li>

    {{/each}}
</ul>

<a href="/api/cars" class="btn btn-light mb-4">Visit API</a>